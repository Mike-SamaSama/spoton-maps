# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Token Storage & Encryption
STORAGE_BACKEND=file
# Options: file, postgres, prisma
USE_PRISMA=false
USE_CLOUD_KMS=false
ENCRYPTION_KEY=your-32-byte-hex-key-here

# PostgreSQL Configuration (if STORAGE_BACKEND=postgres or prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/spoton_maps

# Prisma Configuration
PRISMA_DATABASE_URL=postgresql://user:password@localhost:5432/spoton_maps

# Token Refresh Configuration
SCHEDULE_CRON=0 3 * * *
# Format: minute hour dayOfMonth month dayOfWeek
# Example: 0 3 * * * = Daily at 03:00 UTC

# Cloud Tasks Configuration (Production)
GCP_PROJECT=your-gcp-project-id
CLOUD_TASKS_LOCATION=us-central1
CLOUD_TASKS_QUEUE=token-refresh-queue
WORKER_BASE_URL=https://your-worker-service.run.app

# Cloud KMS Configuration (Production)
CLOUD_KMS_PROJECT=your-gcp-project-id
CLOUD_KMS_LOCATION=us-central1
CLOUD_KMS_KEYRING=spoton-maps-keys
CLOUD_KMS_KEY=encryption-key

# Refresh Worker Configuration
TASK_SECRET=your-shared-secret-for-local-testing

# Optional: Google Places API (for competitor discovery)
GOOGLE_PLACES_API_KEY=your_places_api_key_here
