{
  "name": "spoton-maps",
  "version": "1.0.0",
  "description": "SaaS platform helping Google Maps business registration, verification monitoring, and competitor analysis for multi-location enterprises.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "refresh": "node refresh-runner.js",
    "worker": "node workers/refresh-worker.js",
    "competitor": "node workers/competitor-scan-worker.js",
    "migrate": "node scripts/migrate-prisma.js",
    "seed": "npx prisma db seed",
    "studio": "npx prisma studio",
    "autopush": "node scripts/auto-push.js",
    "install-hooks": "powershell -ExecutionPolicy Bypass -File ./scripts/install-hooks.ps1"
  },
  "generate-docs": "node scripts/generate-docs.js",
  "keywords": [
    "google-maps",
    "business-registration",
    "competitor-monitoring",
    "oauth2",
    "saas"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.0",
    "chokidar": "^3.5.3",
    "node-cron": "^3.0.2",
    "pg": "^8.11.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "optionalDependencies": {
    "@prisma/client": "^5.6.0",
    "@google-cloud/kms": "^4.0.0",
    "@google-cloud/tasks": "^5.4.0"
  }
}
